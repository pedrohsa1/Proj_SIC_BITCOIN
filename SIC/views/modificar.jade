extends templates/default

block content
    .container-fluid.custab(style="margin-right:2em; margin-left:2em; margin-top: 7em; background-color:#fff; padding:3em;")
      .row
        .col-md-12
          div(class=['ui', 'container', 'grid', 'stackable'])
            div(class=['ten', 'wide', 'column'])

              h2(class=['ui','header', 'blue', 'dividing'])= 'Modificar Investidor'

              div(class='form-novoproduto')
                form(class=['ui', 'form'] action='http://localhost:3000/modificarInvestidor' method='post')
                  div(class=['ui', 'field'])
                    label(form='nome')= 'Nome do Investidor'
                    input(type= 'text', name='nome' placeholder='nome' value= investidorSelecionado[0].nome)
                  div(class=['ui', 'field'])
                    label(form='endereco')= 'Endere√ßo'
                    input(type= 'text', name='endereco' placeholder='Endereco' value= investidorSelecionado[0].endereco)
                  div(class=['ui', 'field'])
                    label(form='telefone')= 'Telefone'
                    input(type= 'text', name='telefone' placeholder='Telefone' value= investidorSelecionado[0].telefone)
                  div(class=['ui', 'field'])
                    label(form='email')= 'Email'
                    input(type= 'text', name='email' placeholder='Email' value= investidorSelecionado[0].email)
                  div(class=['ui', 'field'])
                    label(form='qtd_bitcoin')= 'Qtd. Bitcoin'
                    input(type= 'text', name='qtd_bitcoin' placeholder='Qtd. Bitcoin' value= investidorSelecionado[0].qtd_bitcoin)
                  div(class=['ui', 'field'])
                    label(form='exchange_invest')= 'Exchange Investimento'
                    input(type= 'text', name='exchange_invest' placeholder='Exchange Investimento' value= investidorSelecionado[0].exchange_invest)
                    input(type= 'hidden' name='id' value= investidorSelecionado[0].id)
                  div
                  button(class=['ui', 'button','green','button'])= 'Modificar Investidor'
                  a(class=['ui', 'button','red','button'] href="http://localhost:3000/investidor")= 'Cancelar'
                  div(class=['ui', 'message', 'error'])
              if info != undefined
                div(class=['ui', 'message', 'success']) 
                  i(class=['close','icon'])
                  div(class='header')= ' Investidor Modificado! '
                  p= info
          script(src='/javascripts/validacao.js')